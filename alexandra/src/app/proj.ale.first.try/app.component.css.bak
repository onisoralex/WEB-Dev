/* Import the used Google fonts */

@import url('https://fonts.googleapis.com/css?family=Raleway');
body {
  padding: 0;
  margin: 0;
}

form {
  max-width: 30em;
  margin: 4em auto;
  position: relative;
  background: whitesmoke;
  padding: 2em 3em;
  overflow: hidden;
}

form h1 {
  font-family: Raleway, sans-serif;
  color: DodgerBlue;
}

form input[type=text]::placeholder {
  font-family: Raleway, sans-serif;
  color: dimgrey;
}

form .data {
  margin-top: 1em;
}

form .data li {
  background: white;
  border-left: 4px solid darkorange;
  padding: 1em;
  margin: 1em auto;
  color: dimgray;
  font-family: Raleway, sans-serif;
}

form .data li i {
  float: right;
  color: grey;
  cursor: pointer;
}

/* Add Button */

form .input-group-text {
  background: darkorange;
  border-radius: 10% 20% 30% 40%;
  width: 5em;
  height: 5em;
  padding: 1em 23px;
  color: white;
  position: absolute;
  right: 13px;
  top: 68px;
  cursor: pointer;
}

form .input-group-text i {
  font-size: 2em;
}

form .form-control {
  height: 3em;
  font-family: Raleway, sans-serif;
}

form .form-control:focus {
  box-shadow: 0;
}